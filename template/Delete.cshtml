<%
    var fields = Fields.split("|");
    var nome = "";
    var tipo = "";
    var mask = "";
    var hidden = "";    
%>
@model <%=Projeto%>.Models.Context.<%=ObjContext%>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir - <%=ObjContext%>";
}


<div>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="col-md-12">

                <!--begin::Portlet-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">
                                Detalhes:
                            </h3>
                        </div>
                    </div>    
                    <div class="kt-portlet__body">
                        
                        <dl class="row">
                            <% for(var i = 0; i < fields.length; i++){ %>                                                    
                            <%
                                nome = fields[i].split(",")[0]; tipo = fields[i].split(",")[1]; mask = fields[i].split(",")[2];hidden = fields[i].split(",")[3];databasename = fields[i].split(",")[4];nometela = fields[i].split(",")[5];
                            %>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.<%=databasename%>)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.<%=databasename%>)
                            </dd>
                            <%}%>
                        </dl>				
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            @using (Html.BeginForm()) {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Excluir" class="btn btn-danger" />        
                            }
                           
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            
                           <a href='@Url.Action("Index")' class="btn btn-danger">
								<i class="fa fa-arrow-left"></i> Voltar
                            </a>
                            <a href='@Url.Action("Edit", new{id = @Model.<%=PrimaryKeyDb%> })'' class="btn btn-warning">
								<i class="fa fa-edit"></i> Editar
                            </a>
                        </div>
                    </div>   
                </div>
                <!--end::Portlet-->
            </div>
        </div>   
     </div>
</div>